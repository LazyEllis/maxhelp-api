datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  STAFF
  USER
}

model Inventory {
  id          String   @id @default(uuid())
  name        String
  quantity    Int
  unitPrice   Float
  businessUnit String
  minStock    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Sale {
  id          String   @id @default(uuid())
  productId   String
  quantity    Int
  totalAmount Float
  businessUnit String
  createdAt   DateTime @default(now())
}

model Feedback {
  id          String   @id @default(uuid())
  userId      String
  message     String
  businessUnit String
  createdAt   DateTime @default(now())
}